# Server Configuration
NODE_ENV=development
PORT=3001

# Database Configuration
# For SQLite (local development)
DATABASE_URL="file:./dev.db"

# For PostgreSQL (optional, for production)
# DATABASE_URL="postgresql://user:password@localhost:5432/jobhuntai"

# Claude API Configuration
# Get your API key from: https://console.anthropic.com/
CLAUDE_API_KEY=sk-ant-api03-...

# CORS Configuration
FRONTEND_URL=http://localhost:3000

# Job Scraping Configuration
JOB_SCRAPING_ENABLED=true
JOB_CACHE_TTL=21600  # 6 hours in seconds

# Optional: JSearch API for US jobs (aggregates Indeed, LinkedIn, Glassdoor)
# Get free API key at: https://rapidapi.com/letscrape-6bRBa3QguO5/api/jsearch
# Note: JSearch scraper will be skipped if this is not configured
# RAPIDAPI_KEY=your_rapidapi_key_here

# File Storage
# Default is ~/.job-hunt-ai/ (user's home directory)
STORAGE_PATH=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# AI Settings
AI_DAILY_QUOTA=50
AI_CACHE_TTL=86400  # 24 hours in seconds
